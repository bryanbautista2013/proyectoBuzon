@model proyectoBuzon.Models.Sugerencias

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Cliente.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Estilos/Descripcion.css">
<center>
    <h2>Crea tu Sugerencia Aquí...!!</h2>
</center>
<hr />
<center>
    <p>

        <a class="btn btn-info" asp-controller="Cliente" asp-action="Index"><<==Regresar</a>
        @Html.ActionLink("VER SUGERENCIAS", "Index", "Sugerencias", null, new { @class = "btn btn-success " })
    </p>
   
</center>
<div class="col-md-4"></div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCl" class="control-label">Nombre</label>
                <select asp-for="IdCl" class="form-control" asp-items="ViewBag.IdCl"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdTiposug" class="control-label">Tipo de Sugerencia</label>
                <select asp-for="IdTiposug" class="form-control" asp-items="ViewBag.IdTiposug"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaS" class="control-label">Fecha</label>
                <input asp-for="FechaS" class="form-control" />
                <span asp-validation-for="FechaS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescripcionS" class="control-label">Descripción</label>
                <input asp-for="DescripcionS" class="form-control" />
                <span asp-validation-for="DescripcionS" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
