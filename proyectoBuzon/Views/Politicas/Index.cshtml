@model IEnumerable<proyectoBuzon.Models.Politicas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">
<center>
    <h2>POLÍTICAS</h2>
</center>
<div class="container">
    <div class="table-responsive">
        <p>
            <a class="btn btn-info" asp-action="Create">Crear Nuevo</a>
        </p>



        <table class="table table-striped table-bordered table-hover ">

            <thead>
                <tr class="danger">

                    <th>
                        @Html.DisplayNameFor(model => model.NomPolitica)
                    </th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomPolitica)
                    </td>
                    <td>
                        <a class="btn btn-success btn-sm" asp-action="Edit" asp-route-id="@item.IdPolitica">Edit</a> |
                        <a class="btn btn-warning btn-sm" asp-action="Details" asp-route-id="@item.IdPolitica">Details</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.IdPolitica">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>