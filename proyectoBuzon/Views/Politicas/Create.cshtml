@model proyectoBuzon.Models.Politicas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_AdminIndex.cshtml";
}

<h2>Crear Nueva Política</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomPolitica" class="control-label"></label>
                <input asp-for="NomPolitica" class="form-control" />
                <span asp-validation-for="NomPolitica" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-info" asp-action="Index"><<=Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
