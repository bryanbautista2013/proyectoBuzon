@model proyectoBuzon.Models.Quejas

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_Cliente.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Estilos/Descripcion.css">
<center>
    <h2>
        Verificar mis Quejas
    </h2>
    <p>

        @Html.ActionLink("PENDIENTES", "IndexPendientes", "Quejas", null, new { @class = "btn btn-success " })

        @Html.ActionLink("REVISADAS", "IndexSolucionadas", "Quejas", null, new { @class = "btn btn-danger" })
    </p>
</center>
<hr>
<center>
    <h3>Crea tu Queja Aquí...!!</h3>
</center>
<center>
    <hr>
    <a class="btn btn-info" asp-controller="Cliente" asp-action="Index">Regresar</a><br>

    <div class="col-md-4">

    </div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdCl" class="control-label">Nombre</label>
                    <select asp-for="IdCl" class="form-control" asp-items="ViewBag.IdCl"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoq" class="control-label">Tipo de Queja</label>
                    <select asp-for="IdTipoq" class="form-control" asp-items="ViewBag.IdTipoq"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdPolitica" class="control-label">Política</label>
                    <select asp-for="IdPolitica" class="form-control" asp-items="ViewBag.IdPolitica"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdPedido" class="control-label">Pedido</label>
                    <select asp-for="IdPedido" class="form-control" asp-items="ViewBag.IdPedido"></select>
                </div>
                <div class="form-group" hidden="hidden">
                    <label asp-for="IdEstado" class="control-label"></label>
                    <select asp-for="IdEstado" class="form-control" asp-items="ViewBag.IdEstado"></select>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionQ" class="control-label">Descripción</label>
                    <input asp-for="DescripcionQ" class="form-control" />
                    <span asp-validation-for="DescripcionQ" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="CREAR" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <hr>

</center>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
