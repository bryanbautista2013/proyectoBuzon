@model IEnumerable<proyectoBuzon.Models.TblCliente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_AdminIndex.cshtml";
}


<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">

<center>
    <h2>LISTADO CLIENTES</h2>
</center>


<div class="container">
    <div class="table-responsive">


        <p>
            <a class="btn btn-warning" asp-action="Create">Crear Cliente</a>
        </p>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="info">
                    <th>
                        Cédula
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido
                    </th>
                    <th>
                        Fecha Nacimiento
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th>
                        Correo
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CedulaCl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombresCl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApellidosCl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaNacimientoCl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TelefonoCl)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorreoCl)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.IdCl">Edit</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdCl">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdCl">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
