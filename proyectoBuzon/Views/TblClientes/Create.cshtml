@model proyectoBuzon.Models.TblCliente

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_AdminIndex.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Estilos/Descripcion.css">
<center>
    <h2>DATOS DEL CLIENTE</h2>
</center>
    <hr />
    <div class="col-md-4"></div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CedulaCl" class="control-label">Cedula</label>
                    <input asp-for="CedulaCl" class="form-control" />
                    <span asp-validation-for="CedulaCl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NombresCl" class="control-label">Nombre</label>
                    <input asp-for="NombresCl" class="form-control" />
                    <span asp-validation-for="NombresCl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApellidosCl" class="control-label">Apellido</label>
                    <input asp-for="ApellidosCl" class="form-control" />
                    <span asp-validation-for="ApellidosCl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaNacimientoCl" class="control-label">Fecha Nacimiento</label>
                    <input asp-for="FechaNacimientoCl" class="form-control" />
                    <span asp-validation-for="FechaNacimientoCl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TelefonoCl" class="control-label">Teléfono</label>
                    <input asp-for="TelefonoCl" class="form-control" />
                    <span asp-validation-for="TelefonoCl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CorreoCl" class="control-label">Correo</label>
                    <input asp-for="CorreoCl" class="form-control" />
                    <span asp-validation-for="CorreoCl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
    <center>

        <div>
            <a class="btn btn-success" asp-action="Index"><==Regresar</a>

        </div>
    </center>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
