@model IEnumerable<proyectoBuzon.Models.Pedido>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout_AdminIndex.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">
<center>
    <h2>PEDIDOS</h2>
</center>

<div class="container">
    <div class="table-responsive">


        <p>
            <a class="btn btn-warning" asp-action="Create">Create New</a>
        </p>

        <table class="table table-striped table-bordered table-hover ">
            <thead>
                <tr class="info">
                    <th>
                        @Html.DisplayNameFor(model => model.IdClNavigation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdClNavigation.ApellidosCl)
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.IdPedido">Edit</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdPedido">Details</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPedido">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
